@incollection{faddaAnalysingCorruptionEffects2018,
  title = {Analysing {{Corruption}}: {{Effects}} on the {{Transparency}} of {{Public Administrations}}},
  shorttitle = {Analysing {{Corruption}}},
  booktitle = {Outcome-{{Based Performance Management}} in the {{Public Sector}}},
  author = {Fadda, Isabella and Paglietti, Paola and Reginato, Elisabetta and Pavan, Aldo},
  editor = {Borgonovi, Elio and {Anessi-Pessina}, Eugenio and Bianchi, Carmine},
  year = {2018},
  series = {System {{Dynamics}} for {{Performance Management}}},
  pages = {251--267},
  publisher = {{Springer International Publishing}},
  address = {{Cham}},
  doi = {10.1007/978-3-319-57018-1_13},
  abstract = {There is a vast body of literature supporting the claim that the availability and accessibility of information play a vital role in contrasting corruption. Bastida and Benito (2007) demonstrate that the less corrupt a country is, the higher its level of budget transparency is, entailing that is not transparency which curbs corruption but rather the other way around. In this latter perspective the present study tries to contribute to the debate about transparency and corruption through the analysis of a case related to the diffusion of corruption in the twenty Italian regions. The study demonstrates that in regions with higher levels of corruption public administrations commitment towards transparency is lower compared to regions with inferior corruption levels.},
  isbn = {978-3-319-57018-1},
  langid = {english},
  keywords = {Corruption,Italy,Public administrations,Transparency}
}

